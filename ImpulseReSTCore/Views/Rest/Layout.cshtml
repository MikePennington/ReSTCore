<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        /*----------------------------------------------------------
        The base color for this template is #5c87b2. If you'd like
        to use a different color start by replacing all instances of
        #5c87b2 with your new color.
        ----------------------------------------------------------*/
        body {
            background-color: #5c87b2;
            font-size: 1em;
            font-family: "Trebuchet MS", Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #696969;
        }

        a:link {
            color: #034af3;
            text-decoration: underline;
        }

        a:visited {
            color: #505abc;
        }

        a:hover {
            color: #1d60ff;
            text-decoration: none;
        }

        a:active {
            color: #12eb87;
        }

        p, ul {
            margin-bottom: 20px;
            line-height: 1.6em;
        }

        header, footer, nav, section {
            display: block;
        }

        /* HEADINGS   
        ----------------------------------------------------------*/
        h1, h2, h3, h4, h5, h6 {
            color: #000000;
        }

        h1  {
            color: #ffffff;
            font-size: 32px !important;
            font-size: 2em;
            font-weight: bold;
            padding: 5px 0;
            margin: 0;
            border: none;
            line-height: 2em;
        }

        h2 {
            font-size: 1.2em;
            padding: 0 0 10px 0;
        }

        /* PRIMARY LAYOUT ELEMENTS   
        ----------------------------------------------------------*/
        .page {
            width: 90%;
            margin-left: auto;
            margin-right: auto;
        }

        header, #header {
            position: relative;
            margin-bottom: 0px;
            color: #000000;
            padding: 0;
        }

        #main {
            padding: 30px 30px 15px 30px;
            background-color: #fff;
            border-radius: 4px;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
        }

        /* TABLE
        ----------------------------------------------------------*/
        table {
            border: solid 1px #e8eef4;
            border-collapse: collapse;
        }

        table td {
            padding: 5px;
            border: solid 1px #e8eef4;
        }

        table th {
            color: #555555;
            padding: 6px 5px;
            text-align: left;
            background-color: #e8eef4;
            border: solid 1px #e8eef4;
        }

    </style>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>@ViewBag.Title</h1>
            </div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
    </div>
</body>
</html>