@model ReSTCore.Models.HtmlModel
@{
    Layout = "Layout.cshtml";
    ViewBag.Title = "HTML Model";
}

<!DOCTYPE html>

<h2>@Model.GetModelName()</h2>
@if (Model.HTMLTitles == null || Model.HTMLTitles.Length == 0)
{
    <h2>No results to display</h2>
}
else
{
    <div style="overflow: auto;">
        <table>
            <tr>
                @foreach (var obj in Model.HTMLTitles)
                {
                    <th>@(obj)</th>
                }
            </tr>
            <tr>
                @foreach (var obj in Model.TypeObjects)
                {
                    <tr>
                        @foreach (var h in obj.htmlObjects)
                        {
                            <td>@(h.ObjectValue)</td>
                        }
                    </tr>
                }
            </tr>
        </table>
    </div>
}