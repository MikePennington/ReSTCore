﻿@model ReSTCore.Models.DtoModel
@{
    Layout = "Layout.cshtml";
    ViewBag.Title = @Model.Name;
}

@if (!Model.IsValid)
{
    <div><i>@Model.Name</i> is not a valid DTO</div>
}
else
{
    <p>@Model.Description</p>
    
    <h2>XSD</h2>
    <textarea style="width:100%; height:200px;" readonly="readonly">@Model.Xsd</textarea>
    
    <h2>Example XML</h2>
    <textarea style="width:100%; height:200px;" readonly="readonly">@Model.Xml</textarea>

    <h2>Example JSON</h2>
    <textarea style="width:100%; height:200px;" readonly="readonly">@Model.Json</textarea>
}